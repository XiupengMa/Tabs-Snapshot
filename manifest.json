{
  "manifest_version": 3,
  "name": "Tabs Snapshot",
  "version": "1.0.0",
  "description": "Automatically capture tab snapshots to recover from auth redirects and tab management",
  "permissions": [
    "tabs",
    "storage",
    "alarms"
  ],
  "action": {
    "default_popup": "popup-react.html",
    "default_title": "Tabs Snapshot"
  },
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}